@model LoginVM

<section class="login-register container">
    <h1>Register</h1>
    <form asp-controller="Account" asp-action="Register" method="post" class="mt-5 mb-5 needs-validation">
        <div class="pb-3"></div>

        <div class="form-floating mb-3">
            <label>Email address</label>
            <input asp-for="Email"  type="email" class="form-control form-control_gray"  required>
             <span style="color:red" asp-validation-for="Email"></span>
        </div>

        <div class="pb-3"></div>

        <div class="form-floating mb-3">
            <label>Password</label>
            <input asp-for="Password" type="password" class="form-control form-control_gray" required>
             <span style="color:red" asp-validation-for="Password"></span>
        </div>

        <div class="form-floating mb-3">
            <label>Comfirm Password</label>
            <input asp-for="ComfirmPassword" type="password" class="form-control form-control_gray" required>
             <span style="color:red" asp-validation-for="ComfirmPassword"></span>
        </div>

        <div class="d-flex align-items-center mb-3 pb-2">
                <label>
                   Remember me
                </label>
                <input asp-for="IsRemember" class="form-check" />
        </div>

        <button class="btn btn-primary w-100 text-uppercase" type="submit">Register</button>
    </form>
</section>